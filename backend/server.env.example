# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
DB_NAME=OEMAlert

# JWT Configuration
JWT_SECRET=replace-with-strong-random-secret
JWT_EXPIRE=7d

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=you@example.com
EMAIL_PASS=your-app-password
EMAIL_FROM=OEMAlert System <noreply@oemalert.com>

# Alert Configuration
ALERT_EMAIL_RECIPIENTS=admin@hospital.com,security@hospital.com
CRITICAL_ALERT_THRESHOLD=9.0
HIGH_ALERT_THRESHOLD=7.0

# External APIs
NVD_API_KEY=your-nvd-api-key
CVE_API_BASE_URL=https://services.nvd.nist.gov/rest/json/cves/2.0

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/oemalert.log

# Supabase
SUPABASE_URL=https://<your-project>.supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Direct Postgres (optional)
PG_CONNECTION_STRING=postgresql://postgres:[YOUR-PASSWORD]@db.<your-project-ref>.supabase.co:5432/postgres


